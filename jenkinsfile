pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo building > build.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'ls -la'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo deploying to prod'
            }
        }
        stage('System Information') {
            steps {
                sh 'hostnamectl' // Get host information
                sh 'timedatectl' // Get system time and date
                sh 'free -h' // Display memory usage in human-readable format
                sh 'uname -a' // Display system information
            }
        }
    }
}
